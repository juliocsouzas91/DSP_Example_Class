function spectral_visualization(signal, N_size, wind, fs)
    %SPECTRAL_VISUALIZATION Summary of this function goes here
    %   Detailed explanation goes here
    sig_size = lenght(signal);
    if(N_size<=sig_sig)
        N_size = sig_sig;
    end
    mag = abs(fft(signal,N_size));
    
    freq_x = [0:N_size].* (fs/N_size);
    subplot(2,2,1)
    plot(freq_x,mag)
    subplot(2,2,2)

    subplot(2,2,3)

    subplot(2,2,4)

end

